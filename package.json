{
  "name": "musicociel",
  "displayName": "Musicociel",
  "version": "0.0.0-alpha.0",
  "description": "Web application to display and edit songs with lyrics and chords.",
  "homepage": "https://github.com/musicociel/musicociel#readme",
  "author": {
    "name": "DivDE",
    "email": "divde@musicociel.fr"
  },
  "type": "module",
  "bugs": {
    "url": "https://github.com/musicociel/musicociel/issues"
  },
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "lyrics",
    "chords",
    "song",
    "transpose-chords",
    "chordpro",
    "opensong"
  ],
  "license": "MIT",
  "bin": "musicociel.js",
  "files": [
    "musicociel",
    "build"
  ],
  "scripts": {
    "build": "yarn cli:build && yarn ui:build",
    "cli:build": "rollup --failAfterWarnings -c rollup.cli.config.js",
    "cli:dev": "rollup -c rollup.cli.config.js -w",
    "format:check": "prettier . --list-different",
    "format:fix": "prettier . --write",
    "jest:test": "jest -c test/jest.config.cjs",
    "lint": "eslint .",
    "playwright": "playwright",
    "playwright:test": "playwright test --config=e2e/playwright.config.ts",
    "prepare": "yarn build",
    "start": "node ./musicociel.js server",
    "start:dev": "nodemon --watch build/cli.cjs ./musicociel server",
    "test": "yarn format:check && yarn lint && yarn ui:validate && yarn jest:test && yarn build && yarn playwright:test",
    "ui:build": "vite build",
    "ui:preview": "vite preview",
    "ui:serve": "vite serve",
    "ui:validate": "svelte-check --workspace src/ui --fail-on-warnings"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "express-json-validator-middleware": "^3.0.1",
    "express-jwt": "^8.4.1",
    "jwks-rsa": "^3.0.1",
    "pg": "^8.10.0",
    "ws": "^8.13.0",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "@amadeus-it-group/tansu": "^0.0.19",
    "@fortawesome/free-solid-svg-icons": "^6.3.0",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@playwright/test": "^1.31.2",
    "@prettier/plugin-xml": "^2.2.0",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-typescript": "^11.0.0",
    "@sveltejs/vite-plugin-svelte": "^2.0.3",
    "@types/express": "^4.17.17",
    "@types/history": "^4.7.9",
    "@types/http-errors": "^2.0.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.5",
    "@types/pg": "^8.6.6",
    "@types/uuid": "^9.0.1",
    "@types/ws": "^8.5.4",
    "@types/yargs": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@xmldom/xmldom": "^0.8.6",
    "ace-builds": "^1.16.0",
    "bootstrap": "^5.2.3",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "helmet": "^6.0.1",
    "history": "^4.10.1",
    "http-errors": "^2.0.0",
    "immer": "^9.0.19",
    "jest": "^29.5.0",
    "nodemon": "^2.0.21",
    "oidc-client-ts": "^2.2.2",
    "path-to-regexp": "^6.2.1",
    "prettier": "^2.8.6",
    "prettier-plugin-svelte": "^2.9.0",
    "rollup": "^3.20.0",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.57.0",
    "svelte-check": "^3.1.4",
    "svelte-i18n": "^3.6.0",
    "swiper": "^9.1.1",
    "ts-jest": "^29.0.5",
    "tslib": "^2.5.0",
    "typescript": "^5.0.2",
    "uuid": "^9.0.0",
    "vite": "^4.2.1",
    "vite-plugin-pwa": "^0.14.6",
    "workbox-precaching": "^6.5.4",
    "workbox-strategies": "^6.5.4"
  },
  "packageManager": "yarn@3.5.0"
}
