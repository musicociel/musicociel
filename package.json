{
  "name": "musicociel",
  "displayName": "Musicociel",
  "version": "0.0.0-alpha.0",
  "description": "Web application to display and edit songs with lyrics and chords.",
  "homepage": "https://github.com/musicociel/musicociel#readme",
  "author": {
    "name": "DivDE",
    "email": "divde@musicociel.fr"
  },
  "type": "module",
  "bugs": {
    "url": "https://github.com/musicociel/musicociel/issues"
  },
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "lyrics",
    "chords",
    "song",
    "transpose-chords",
    "chordpro",
    "opensong"
  ],
  "license": "MIT",
  "bin": "musicociel.js",
  "files": [
    "musicociel",
    "build"
  ],
  "scripts": {
    "build": "npm run cli:build && npm run ui:build",
    "cli:build": "rollup --failAfterWarnings -c rollup.cli.config.js",
    "cli:dev": "rollup -c rollup.cli.config.js -w",
    "format:check": "prettier . --list-different",
    "format:fix": "prettier . --write",
    "jest:test": "jest -c test/jest.config.cjs",
    "lint": "eslint .",
    "playwright": "playwright",
    "playwright:test": "playwright test --config=e2e/playwright.config.ts",
    "start": "node ./musicociel.js server",
    "start:dev": "nodemon --watch build/cli.cjs ./musicociel server",
    "test": "npm run format:check && npm run lint && npm run ui:validate && npm run jest:test && npm run build && npm run playwright:test",
    "ui:build": "vite build",
    "ui:preview": "vite preview",
    "ui:serve": "vite serve",
    "ui:validate": "svelte-check --workspace src/ui --fail-on-warnings"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "express": "^4.18.3",
    "express-json-validator-middleware": "^3.0.1",
    "express-jwt": "^8.4.1",
    "jwks-rsa": "^3.1.0",
    "pg": "^8.11.3",
    "ws": "^8.16.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@amadeus-it-group/tansu": "^1.0.0",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@playwright/test": "^1.42.0",
    "@prettier/plugin-xml": "^3.3.1",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-typescript": "^11.1.6",
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "@types/express": "^4.17.21",
    "@types/history": "^4.7.11",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.2",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@xmldom/xmldom": "^0.8.10",
    "ace-builds": "^1.32.6",
    "bootstrap": "^5.3.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "helmet": "^7.1.0",
    "history": "^4.10.1",
    "http-errors": "^2.0.0",
    "immer": "^10.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "oidc-client-ts": "^3.0.1",
    "path-to-regexp": "^6.2.1",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.2",
    "rollup": "^4.12.0",
    "rollup-plugin-string": "^3.0.0",
    "svelte": "^4.2.12",
    "svelte-check": "^3.6.6",
    "svelte-i18n": "^4.0.0",
    "swiper": "^11.0.7",
    "ts-jest": "^29.1.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "vite": "^5.1.4",
    "vite-plugin-pwa": "^0.19.2",
    "workbox-precaching": "^7.0.0",
    "workbox-strategies": "^7.0.0"
  }
}
