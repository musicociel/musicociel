{
  "name": "musicociel",
  "version": "0.0.0-alpha.0",
  "description": "Web application to display and edit songs with lyrics and chords.",
  "homepage": "https://github.com/musicociel/musicociel#readme",
  "author": {
    "name": "DivDE",
    "email": "divde@musicociel.fr"
  },
  "bugs": {
    "url": "https://github.com/musicociel/musicociel/issues"
  },
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "lyrics",
    "chords",
    "song",
    "transpose-chords",
    "chordpro",
    "opensong"
  ],
  "license": "MIT",
  "bin": {
    "musicociel": "musicociel"
  },
  "files": [
    "musicociel",
    "build"
  ],
  "scripts": {
    "build": "npm run cli:build && npm run ui:build",
    "cli:build": "rollup --failAfterWarnings -c rollup.cli.config.js",
    "cli:dev": "rollup -c rollup.cli.config.js -w",
    "format:check": "prettier '**/*.{svelte,html,js,ts,json,md}' --list-different",
    "format:fix": "prettier '**/*.{svelte,html,js,ts,json,md}' --write",
    "jest:test": "jest -c test/jest.config.js",
    "lint": "eslint .",
    "playwright": "playwright",
    "playwright:test": "playwright test --config=e2e/playwright.config.ts",
    "prepare": "npm run build",
    "start": "./musicociel server",
    "start:dev": "nodemon --watch build/cli.js ./musicociel server",
    "test": "npm run format:check && npm run lint && npm run ui:validate && npm run jest:test && npm run build && npm run playwright:test",
    "ui:build": "vite build",
    "ui:serve": "vite serve",
    "ui:validate": "svelte-check --workspace src/ui --fail-on-warnings --fail-on-hints"
  },
  "dependencies": {
    "body-parser": "1.19.2",
    "express": "4.17.3",
    "express-json-validator-middleware": "2.2.1",
    "pg": "8.7.3",
    "ws": "8.5.0",
    "yargs": "17.4.0"
  },
  "devDependencies": {
    "@fortawesome/free-solid-svg-icons": "6.1.1",
    "@fullhuman/postcss-purgecss": "4.1.3",
    "@playwright/test": "1.20.1",
    "@rollup/plugin-commonjs": "21.0.2",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@rollup/plugin-replace": "4.0.0",
    "@rollup/plugin-typescript": "8.3.1",
    "@sveltejs/vite-plugin-svelte": "1.0.0-next.40",
    "@types/express": "4.17.13",
    "@types/history": "4.7.9",
    "@types/http-errors": "1.8.2",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.22",
    "@types/pg": "8.6.5",
    "@types/uuid": "8.3.4",
    "@types/ws": "8.5.3",
    "@types/yargs": "17.0.10",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "@xmldom/xmldom": "0.8.1",
    "ace-builds": "1.4.14",
    "bootstrap": "5.1.3",
    "eslint": "8.11.0",
    "eslint-config-prettier": "8.5.0",
    "helmet": "5.0.2",
    "history": "4.10.1",
    "http-errors": "2.0.0",
    "immer": "9.0.12",
    "jest": "27.5.1",
    "keycloak-connect": "17.0.0",
    "keycloak-js": "17.0.0",
    "nodemon": "2.0.15",
    "path-to-regexp": "6.2.0",
    "prettier": "2.6.0",
    "prettier-plugin-svelte": "2.6.0",
    "rollup": "2.70.1",
    "rollup-plugin-string": "3.0.0",
    "rollup-plugin-terser": "7.0.2",
    "svelte": "3.46.4",
    "svelte-check": "2.4.6",
    "svelte-i18n": "3.3.13",
    "svelte-preprocess": "4.10.4",
    "swiper": "8.0.7",
    "ts-jest": "27.1.3",
    "tslib": "2.3.1",
    "typescript": "4.6.2",
    "uuid": "8.3.2",
    "vite": "2.8.6",
    "vite-plugin-pwa": "0.11.13",
    "workbox-precaching": "6.5.1",
    "workbox-strategies": "6.5.1"
  }
}
