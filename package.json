{
  "name": "musicociel",
  "displayName": "Musicociel",
  "version": "0.0.0-alpha.0",
  "description": "Web application to display and edit songs with lyrics and chords.",
  "homepage": "https://github.com/musicociel/musicociel#readme",
  "author": {
    "name": "DivDE",
    "email": "divde@musicociel.fr"
  },
  "bugs": {
    "url": "https://github.com/musicociel/musicociel/issues"
  },
  "cordova": {
    "platforms": [
      "android",
      "electron"
    ],
    "plugins": {
      "cc.fovea.cordova.openwith": {
        "ANDROID_MIME_TYPE": "application/musicociel",
        "ANDROID_EXTRA_ACTIONS": ""
      },
      "cordova-plugin-file": {
        "ANDROIDX_WEBKIT_VERSION": "1.4.0"
      }
    }
  },
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "lyrics",
    "chords",
    "song",
    "transpose-chords",
    "chordpro",
    "opensong"
  ],
  "license": "MIT",
  "bin": {
    "musicociel": "musicociel"
  },
  "files": [
    "musicociel",
    "build"
  ],
  "scripts": {
    "android:build": "cordova build android --release",
    "android:run": "cordova run android",
    "build": "npm run cli:build && npm run ui:build",
    "cli:build": "rollup --failAfterWarnings -c rollup.cli.config.js",
    "cli:dev": "rollup -c rollup.cli.config.js -w",
    "cordova": "cordova",
    "cordova:prepare": "cordova prepare",
    "electron:build": "cordova build electron --release",
    "electron:run": "cordova run electron --nobuild",
    "format:check": "prettier . --list-different",
    "format:fix": "prettier . --write",
    "jest:test": "jest -c test/jest.config.js",
    "lint": "eslint .",
    "playwright": "playwright",
    "playwright:test": "playwright test --config=e2e/playwright.config.ts",
    "prepare": "npm run build && npm run cordova:prepare",
    "start": "node ./musicociel server",
    "start:dev": "nodemon --watch build/cli.js ./musicociel server",
    "test": "npm run format:check && npm run lint && npm run ui:validate && npm run jest:test && npm run build && npm run playwright:test",
    "ui:build": "vite build",
    "ui:serve": "vite serve",
    "ui:validate": "svelte-check --workspace src/ui --fail-on-warnings --fail-on-hints"
  },
  "dependencies": {
    "body-parser": "1.20.0",
    "express": "4.18.1",
    "express-json-validator-middleware": "2.2.1",
    "pg": "8.7.3",
    "ws": "8.6.0",
    "yargs": "17.4.1"
  },
  "devDependencies": {
    "@fortawesome/free-solid-svg-icons": "6.1.1",
    "@fullhuman/postcss-purgecss": "4.1.3",
    "@playwright/test": "1.21.1",
    "@prettier/plugin-xml": "2.2.0",
    "@rollup/plugin-commonjs": "22.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@rollup/plugin-replace": "4.0.0",
    "@rollup/plugin-typescript": "8.3.2",
    "@sveltejs/vite-plugin-svelte": "1.0.0-next.44",
    "@types/express": "4.17.13",
    "@types/history": "4.7.9",
    "@types/http-errors": "1.8.2",
    "@types/jest": "27.5.0",
    "@types/node": "17.0.31",
    "@types/pg": "8.6.5",
    "@types/uuid": "8.3.4",
    "@types/ws": "8.5.3",
    "@types/yargs": "17.0.10",
    "@typescript-eslint/eslint-plugin": "5.26.0",
    "@typescript-eslint/parser": "5.26.0",
    "@xmldom/xmldom": "0.8.2",
    "ace-builds": "1.4.14",
    "bootstrap": "5.1.3",
    "cc.fovea.cordova.openwith": "^2.1.0",
    "cordova": "^11.0.0",
    "cordova-android": "^10.1.2",
    "cordova-electron": "^3.0.0",
    "cordova-plugin-file": "^7.0.0",
    "eslint": "8.14.0",
    "eslint-config-prettier": "8.5.0",
    "helmet": "5.0.2",
    "history": "4.10.1",
    "http-errors": "2.0.0",
    "immer": "9.0.12",
    "jest": "27.5.1",
    "keycloak-connect": "18.0.0",
    "keycloak-js": "18.0.0",
    "nodemon": "2.0.16",
    "path-to-regexp": "6.2.1",
    "prettier": "2.6.2",
    "prettier-plugin-svelte": "2.7.0",
    "rollup": "2.74.1",
    "rollup-plugin-string": "3.0.0",
    "rollup-plugin-terser": "7.0.2",
    "svelte": "3.48.0",
    "svelte-check": "2.7.0",
    "svelte-i18n": "3.4.0",
    "svelte-preprocess": "4.10.6",
    "swiper": "8.3.1",
    "ts-jest": "27.1.4",
    "tslib": "2.4.0",
    "typescript": "4.6.4",
    "uuid": "8.3.2",
    "vite": "2.9.9",
    "vite-plugin-pwa": "0.12.0",
    "workbox-precaching": "6.5.3",
    "workbox-strategies": "6.5.3"
  }
}
