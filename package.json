{
  "name": "musicociel",
  "version": "0.0.0-alpha.0",
  "description": "Web application to display and edit songs with lyrics and chords.",
  "homepage": "https://github.com/musicociel/musicociel#readme",
  "author": {
    "name": "DivDE",
    "email": "divde@musicociel.fr"
  },
  "bugs": {
    "url": "https://github.com/musicociel/musicociel/issues"
  },
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "lyrics",
    "chords",
    "song",
    "transpose-chords",
    "chordpro",
    "opensong"
  ],
  "license": "MIT",
  "bin": {
    "musicociel": "musicociel"
  },
  "files": [
    "musicociel",
    "build"
  ],
  "scripts": {
    "build": "rollup --failAfterWarnings -c rollup.config.js",
    "build:dev": "rollup -c rollup.config.js -w",
    "cli:build": "rollup --failAfterWarnings -c rollup.cli.config.js",
    "cli:dev": "rollup -c rollup.cli.config.js -w",
    "format:check": "prettier '**/*.{svelte,html,js,ts,json,md}' --list-different",
    "format:fix": "prettier '**/*.{svelte,html,js,ts,json,md}' --write",
    "jest:test": "jest -c test/jest.config.js",
    "lint": "eslint .",
    "playwright": "playwright",
    "playwright:test": "playwright test --config=e2e/playwright.config.ts",
    "prebuild": "rimraf build",
    "prepare": "npm run build",
    "start": "./musicociel server",
    "start:dev": "nodemon --watch build/cli.js ./musicociel server",
    "ui:build": "rollup --failAfterWarnings -c rollup.ui.config.js",
    "ui:dev": "rollup -c rollup.ui.config.js -w",
    "ui:validate": "svelte-check --workspace src/ui --fail-on-warnings --fail-on-hints"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "express": "4.17.1",
    "express-json-validator-middleware": "2.1.1",
    "pg": "8.7.1",
    "ws": "8.0.0",
    "yargs": "17.0.1"
  },
  "devDependencies": {
    "@fortawesome/free-solid-svg-icons": "5.15.3",
    "@fullhuman/postcss-purgecss": "4.0.3",
    "@playwright/test": "1.13.1",
    "@rollup/plugin-commonjs": "19.0.2",
    "@rollup/plugin-html": "0.2.3",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.0.4",
    "@rollup/plugin-replace": "3.0.0",
    "@rollup/plugin-typescript": "8.2.4",
    "@tsconfig/svelte": "2.0.1",
    "@types/express": "4.17.13",
    "@types/history": "4.7.9",
    "@types/jest": "26.0.24",
    "@types/node": "16.4.7",
    "@types/pg": "8.6.1",
    "@types/uuid": "8.3.1",
    "@types/ws": "7.4.7",
    "@types/xmldom": "0.1.31",
    "@types/yargs": "17.0.2",
    "@typescript-eslint/eslint-plugin": "4.28.5",
    "@typescript-eslint/parser": "4.28.5",
    "ace-builds": "1.4.12",
    "bootstrap": "5.0.2",
    "eslint": "7.31.0",
    "eslint-config-prettier": "8.3.0",
    "helmet": "4.6.0",
    "history": "4.10.1",
    "immer": "9.0.5",
    "jest": "27.0.6",
    "keycloak-connect": "14.0.0",
    "keycloak-js": "14.0.0",
    "nodemon": "2.0.12",
    "path-to-regexp": "6.2.0",
    "playwright": "1.13.0",
    "postcss": "8.3.6",
    "prettier": "2.3.2",
    "prettier-plugin-svelte": "2.3.1",
    "rimraf": "3.0.2",
    "rollup": "2.55.1",
    "rollup-plugin-copy": "3.4.0",
    "rollup-plugin-livereload": "2.0.5",
    "rollup-plugin-postcss": "4.0.0",
    "rollup-plugin-string": "3.0.0",
    "rollup-plugin-svelte": "7.1.0",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-workbox": "6.1.3",
    "svelte": "3.41.0",
    "svelte-check": "2.2.3",
    "svelte-i18n": "3.3.9",
    "svelte-preprocess": "4.7.4",
    "swiper": "6.8.0",
    "ts-jest": "27.0.4",
    "tslib": "2.3.0",
    "typescript": "4.3.5",
    "uuid": "8.3.2",
    "workbox-precaching": "6.1.5",
    "workbox-strategies": "6.1.5",
    "xmldom": "0.6.0"
  }
}
